{
    "latex-workshop.latex.outDir": "./build",
    "latex-workshop.latex.tools": [
  {
    "name": "latexmk",
    "command": "latexmk",
    "args": [
      "-shell-escape",
      "-synctex=1",
      "-halt-on-error",
      "-file-line-error",
      "-outdir=%OUTDIR%", // this is the line you need to add
      "%DOC%"
    ],
    "env": {}
  }
]
}